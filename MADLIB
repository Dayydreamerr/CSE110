def main():
    # Prompt user for words
    adjective1 = input("Enter an adjective: ")
    noun1 = input("Enter a noun: ")
    animal = input("Enter an animal: ")
    verb1 = input("Enter a verb: ")
    adverb = input("Enter an adverb: ")
    verb2 = input("Enter another verb: ")
    adjective2 = input("Enter another adjective: ")
    noun2 = input("Enter another noun: ")
    exclamation = input("Enter an exclamation: ")
    emotion = input("Enter an emotion: ")

    # Fill in the story with user's words
    story = f"In the land of {adjective1} {noun1}s, there was a {adjective1} {animal} who loved to {verb1} {adverb}. One day, while {verb1}ing {adverb}, the {animal} encountered a {adjective2} {noun2}. \"{exclamation}\" cried the {animal}. But instead of {verb1}ing away, the {noun2} began to {verb1} towards the {animal}. In a moment of {emotion}, the {animal} decided to {verb2} and, miraculously, it worked! The {noun2} stopped in its tracks and the day was saved."

    # Display the story
    print("\nYour story is:\n")
    print(story)

if __name__ == "__main__":
    main()
